{
	"name": "azure-pipelines-task-vscode-runner",
	"displayName": "Azure Pipelines Task Runner",
	"description": "Allows running and debugging Azure pipelines tasks from VS Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "az-pipelines-extension.generateDebugConfig",
				"title": "Azure Pipelines: Generate Debug Profile"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == json",
					"command": "az-pipelines-extension.generateDebugConfig"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/vso-node-api": "^4.0.0",
		"comment-json": "^3.0.2",
		"vscode-nls": "^4.1.2"
	}
}
